@model PrimeiraAplicacao.Models.Aluno;


<div class="page-header">
    <h1>Cadastro de Alunos</h1>
</div>

<form asp-action="Cadastrar" method="POST">    
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input type="text" asp-for="Nome" name="nome" class="form-control">
    </div>
    
    <div class="form-group">
        <label asp-for="NotaFinal"></label>
        <input type="number" asp-for="NotaFinal" name="notaFinal" class="form-control">
    </div>
    
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>