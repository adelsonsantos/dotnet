@model IEnumerable<PrimeiraAplicacao.Models.Aluno>

@{
    ViewData["Title"] = "Listagem de Alunos";
}



<h1>Listagem de Alunos</h1>
<table class="table table-hover table-striped">
    <tr>
        <th>Cod.</th>
        <th>Nome</th>
        <th>Nota Final</th>
        <th>Resultado</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Nome</td>
            <td>@item.NotaFinal</td>
            <td>@if (@item.Aprovado == true)
                {
                    <text>Aprovado</text>
                }
                else
                {
                    <text>Reprovado</text>
                }
            </td>
        </tr>
    }   
</table>